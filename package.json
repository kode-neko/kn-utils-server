{
  "name": "utils-server",
  "version": "0.0.0",
  "description": "It's a node-express app for several porpouses. At the moment only for a e-mail server",
  "main": "build/index.js",
  "scripts": {
    "start": "dotenvx run -f ./.env -- node ./lib/index.js",
    "dev": "dotenvx run -f ./.env -- node ./lib/index.js --watch",
    "build": "npm run clean:lib && tsc --project ./tsconfig.json",
    "build:dev": "tsc --watch --project ./tsconfig.json",
    "docker": "docker compose up --detach",
    "clean": "npm run clean:dist && npm run clean:lib",
    "clean:lib": "rm -rf ./lib",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "repository": "git+https://github.com/kode-neko/kn-utils-server.git",
  "keywords": [
    "server",
    "mail"
  ],
  "author": "Kodeneko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kode-neko/kn-utils-server/issues"
  },
  "homepage": "https://github.com/kode-neko/kn-utils-server#readme",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.33.0",
    "@faker-js/faker": "^7.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "mailgun": "^0.5.0",
    "nodemailer": "^6.9.16",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "@eslint/json": "^0.9.1",
    "@stylistic/eslint-plugin": "^2.13.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.57.1",
    "eslint-plugin-jsonc": "^2.18.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-keys": "^2.3.5",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.8.4",
    "typescript-eslint": "^8.20.0"
  }
}
